<Window x:Class="DimensionamentoEletrico.Views.Windows.Dimensionamento2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensionamentoEletrico.Views.Windows"
        mc:Ignorable="d"
        Title="Dimensionamento" Height="400" Width="540">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Views/Windows/dimensionamento.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="comboBoxDimensionamentoComodo" Grid.Column="1" Margin="10,10,10,10" Grid.Row="3" FontSize="14" FontWeight="SemiBold" Cursor="Hand" ToolTip="Selecione um ambiente." />
        <Label Grid.Column="1" Content="Selecione o comodo" Margin="10,10" Grid.Row="2" Padding="5" FontSize="14" Foreground="Black" OpacityMask="#FF8E7878" Background="#FFD8D6D6" HorizontalContentAlignment="Center"/>
        <Label  Grid.Column="1" Content="Selecione a tensão" Grid.Row="4" Margin="10" FontSize="14" HorizontalContentAlignment="Center" Cursor="Hand" ToolTip="Clique para salvar o " Background="#FFD8D6D6"  />
        <Label Grid.Column="3" Content="Selecione o equipamento" Margin="10" Grid.Row="2" Padding="5" FontSize="12" Background="#FFD8D6D6" ToolTip="Dê um nome para o projeto, exemplo: Casa do Zacarias..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="comboBoxEquipamentoDimensionamento" Grid.Row="3" Grid.Column="3" Margin="10" FontSize="14" Background="#FFD8D6D6"></ComboBox>
        <ComboBox x:Name="comboBoxNomeProjetoDimensionamento"  Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"  Margin="10" HorizontalContentAlignment="Center" FontSize="16" Background="#FFD8D6D6" ></ComboBox>
        <ComboBox x:Name="comboBoxTensaoEquipamentoDimensionamento" Grid.Row="5" Grid.Column="1" Margin="10" FontSize="14" Background="#FFD8D6D6"></ComboBox>
        <Label Grid.Column="1" Content="Selecione o projeto" Margin="10" Grid.Row="1" Padding="5" FontSize="12" Background="#FFD8D6D6" ToolTip="Dê um nome para o projeto, exemplo: Casa do Zacarias..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="2" Content="Digite a potência" Margin="10" Grid.Row="4" Padding="5" FontSize="12" Background="#FFD8D6D6" ToolTip="Dê um nome para o projeto, exemplo: Casa do Zacarias..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Grid.Column="2"  Margin="10" Grid.Row="5" Padding="5" FontSize="12" Background="#FFD8D6D6" ToolTip="Dê um nome para o projeto, exemplo: Casa do Zacarias..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="3" Content="Selecione a quantidade"  Margin="10" Grid.Row="4" Padding="5" FontSize="12" Background="#FFD8D6D6" ToolTip="Dê um nome para o projeto, exemplo: Casa do Zacarias..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="comboBoxQuantidadeEquipamentoDimensionamento" Grid.Row="5" Grid.Column="3" Margin="10" FontSize="14" Background="#FFD8D6D6"></ComboBox>
        <Button x:Name="buttonSalvaAmbienteComodoDimensionamento" Grid.Column="2" Grid.Row="7" Margin="10" Content="Salvar" FontSize="14" HorizontalContentAlignment="Center" Cursor="Hand" ToolTip="Clique para salvar o "  />

    </Grid>
</Window>

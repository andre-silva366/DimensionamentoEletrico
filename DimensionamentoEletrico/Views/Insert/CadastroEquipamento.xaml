<Window x:Class="DimensionamentoEletrico.Views.Insert.CadastroEquipamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensionamentoEletrico.Views.Insert"
        mc:Ignorable="d"
        Title="Cadastro de Equipamento" Height="600" Width="800">
    <Grid x:Name="TelaCadastroEquipamento" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Views/Insert/equipamento.png"/>
        </Grid.Background>        
        <TextBox x:Name="textBoxNomeEquipamento" Grid.Column="2" Margin="10,25,10,25" 
                 Grid.Row="2" TextWrapping="Wrap" FontSize="14" VerticalContentAlignment="Center" 
                 HorizontalContentAlignment="Center" MaxLength="50" MaxLines="2"/>
        <Label Grid.Column="2" Content="Nome" Margin="10,0,10,70" Grid.Row="2" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" 
               FontSize="16" FontFamily="Arial" Background="White" Foreground="Black" FontWeight="SemiBold"/>
        
        <ComboBox x:Name="comboBoxTensaoEquipamento" FontSize="14" VerticalContentAlignment="Center" 
                 HorizontalContentAlignment="Center" Grid.Column="2" Margin="10,25,10,25" Grid.Row="3" 
                  ToolTip="Selecione a tensão elétrica do equipamento (vulgo voltagem), caso o equipamento seja bivolt selecione a tensão da tomada em que será ligado." BorderBrush="White" />
        <Label Grid.Column="2" Content="Tensão (Volts)" Margin="10,0,10,70" Grid.Row="3" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" 
               FontSize="16" FontFamily="Arial" Background="White" Foreground="Black" FontWeight="SemiBold"/>

        <TextBox x:Name="textBoxPotenciaEquipamento" ToolTip="Digite a potência do equipamento (somente números), ex: Microondas geralmente é 1200 Watts" Grid.Column="2" Margin="10,25,10,25" 
         Grid.Row="4" TextWrapping="Wrap" FontSize="14" VerticalContentAlignment="Center" 
         HorizontalContentAlignment="Center" MaxLength="50" MaxLines="2"/>
        <Label Grid.Column="2" Content="Potência (Watts)" Margin="10,0,10,70" Grid.Row="4" 
       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" 
       FontSize="16" FontFamily="Arial" Background="White" Foreground="Black" FontWeight="SemiBold"/>

        <Button x:Name="buttonCadastrarEquipamento" Grid.Column="2" Content="Cadastrar" Margin="10,25,10,25" 
                Grid.Row="5" FontSize="14" FontWeight="SemiBold" Cursor="Hand" IsCancel="True" 
                ToolTip="Clique para cadastrar caso os dados acima estejam corretos." Click="buttonCadastrarEquipamento_Click"/>
    </Grid>
</Window>
